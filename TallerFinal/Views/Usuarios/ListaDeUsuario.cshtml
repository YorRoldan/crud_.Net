@model IEnumerable<TallerFinal.ClasesDTO.UsuariosDto>

@{
    ViewData["Title"] = "Lista de Usuarios";
}
<div class="aline-content">
        <a asp-action="Crear" asp-controller="Usuarios" class="btn btn-success btn-sm">Crear Usuario</a>
</div>

<section>
  <h3 class="text-center">Listado de Usuarios Registrados</h3>

        @if(Model.Count() > 0)
        {
          <table id="example" class="table table-striped" style="width:100%">
          <thead>
             <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Documento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellidos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Celular)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        Rol
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Documento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreRol)
                    </td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.IdUsuario" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil-square"></i>
                        </a> |
                        <a asp-action="Detalle" asp-route-id="@item.IdUsuario" class="btn btn-warning btn-sm">
                            <i class="bi bi-eye"></i>
                        </a> |
                        <a asp-action="Eliminar" asp-route-id="@item.IdUsuario" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
                </tr>        }
            </tbody>
        </table>
        }
        else
        {
             <p>No hay Registros</p>
        }
</section>