@model TallerFinal.Models.Clientes

@{
    ViewData["Title"] = "Detalles del Clientes";
}

<h3 class="text-center">Detalle del Cliente</h3>
  <hr />

<div class="col-md-12">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Documento)
        </dd>       
    </dl>
</div>
<div>
    <a asp-action="Editar" asp-route-id="@Model?.IdCliente" class="btn btn-success btn-sm">Editar</a> |
    <a asp-action="ListaDeClientes" class="btn btn-secondary btn-sm">Regresar</a>
</div>
